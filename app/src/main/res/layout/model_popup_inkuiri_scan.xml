<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AB000000"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:contentPadding="@dimen/fontsize10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/anim_sukses" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Barcode Detail"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize18"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Nama Pemesan"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/text_nama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText"
                    tools:text="Windy Permadi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Kota"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/text_kota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText"
                    tools:text="Yogyakarta" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Tempat Ibadah"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/text_tempat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText"
                    tools:text="Gedung Bagus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Jenis Ibadah"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/text_jenis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText"
                    tools:text="Ibadah Umum" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Jam Ibadah"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/text_jam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText"
                    tools:text="Info Detail" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Tutup"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize18"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>